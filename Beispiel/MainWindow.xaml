<Window x:Class="Beispiel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beispiel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Closing="Window_Closing">
    <Grid>
        <Button Name="btnOn" Content="Ampel einschalten" HorizontalAlignment="Left" Margin="192,67,0,0" VerticalAlignment="Top" Width="131" Click="btnOn_Click"/>
        <Button Name="btnOff" Content="Ampel ausschalten" HorizontalAlignment="Left" Margin="192,92,0,0" VerticalAlignment="Top" Width="131" Click="btnOff_Click"/>
        <Button Name="btnToggle" Content="Ampel umschalten" HorizontalAlignment="Left" Margin="192,117,0,0" VerticalAlignment="Top" Width="131" Click="btnToggle_Click"/>
        <TextBlock x:Name="txtActiveAmpels" HorizontalAlignment="Left" Height="21" Margin="10,288,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="497"/>
        <Button x:Name="btnAuto" Content="Automatik umschalten" HorizontalAlignment="Left" Margin="192,142,0,0" VerticalAlignment="Top" Width="131" Click="btnAuto_Click" />

    </Grid>
</Window>
